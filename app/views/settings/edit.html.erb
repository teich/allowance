<div class="container mt-4">
  <h1 class="mb-4">Update Weekly Allowance</h1>

<%= form_with(url: settings_path, method: 'put', local: true) do |form| %>
  <div class="form-group">
      <%= form.label :spending, 'Spending Allowance:' %>
      <%= form.number_field :spending, step: '0.01', value: @weekly_allowance[:spending] %>
    </div>
  <div class="form-group">
      <%= form.label :savings, 'Savings Allowance:' %>
      <%= form.number_field :savings, step: '0.01', value: @weekly_allowance[:savings] %>
    </div>
  <div class="form-group">
      <%= form.label :giving, 'Giving Allowance:' %>
      <%= form.number_field :giving, step: '0.01', value: @weekly_allowance[:giving] %>
    </div>
  <div class="form-group">
      <%= form.submit 'Update Allowance' %>
    </div>
  <% end %>

  <br>
  <%= form_with(url: run_weekly_allowance_settings_path, method: 'post', local: true) do |form| %>
    <%= form.submit 'Run Weekly Allowance' %>
  <% end %>

  <%= link_to 'Back to Dashboard', root_path %>
</div>