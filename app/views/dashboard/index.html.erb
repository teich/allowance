<div class="container mt-4">
<h1 class="mb-4">Allowance Tracker</h1>

<% if @last_allowance_run_date %>
<% local_time = @last_allowance_run_date.in_time_zone('Pacific Time (US & Canada)') %>
  <p>Last allowance run on: <%= local_time.strftime('%B %d, %Y at %I:%M %p') %></p>
<% else %>
  <p>Last allowance run date is not available.</p>
<% end %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Category</th>
      <th>Balance</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Spending</td>
      <td><%= number_to_currency(@spending_balance, unit: '$') %></td>
    </tr>
    <tr>
      <td>Savings</td>
      <td><%= number_to_currency(@savings_balance, unit: '$') %></td>
    </tr>
    <tr>
      <td>Giving</td>
      <td><%= number_to_currency(@giving_balance, unit: '$') %></td>
    </tr>
  </tbody>
</table>

<br>

<%= link_to 'View Transactions', transactions_path, class: 'btn btn-secondary' %>
<%= link_to 'Update Weekly Allowance', edit_settings_path, class: 'btn btn-secondary' %>

</div>